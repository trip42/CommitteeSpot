<metal:main use-macro="load:../master.pt">
<metal:title fill-slot="title">${project.name} - CommitteeSpot</metal:title>
<metal:content fill-slot="content">

<metal:header use-macro="load:header.pt" />

<div class="row">
    <div class="span12">
         <h2>View Feedback</h2>
    </div>
</div> 

<div class="row">
    <div class="span7">
        <div class="padding">

        <p tal:condition="not:item_summaries">
            You have not yet collected any feedback.
        </p>


        <div tal:repeat="item item_summaries">
            <h3 tal:content="item['item'].title"></h3>

            <div tal:repeat="summary item['summary']"
                 tal:content="structure summary"></div> 

        </div>
        </div>

    </div>
    <div class="span5">
        <div class="padding">
            <div class="well">
                <ul class="nav nav-list">
                    <li class="nav-header">Feedback Options</li>
                    <li class="active"> 
                        <a href="${route_url('project:feedback:view',request,project_id=project.id)}">Feedback Summary </a>
                    </li>

                    <li>
                        <a href="${route_url('project:feedback:download',request,project_id=project.id)}">Download Feedback (.csv)</a>
                    </li>

                    <li class="nav-header">Analyze by Question</li>

                    <li tal:repeat="widget project.feedback_form.widgets">
                        <a href="#">${widget.label}</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

</metal:content>
</metal:main>

