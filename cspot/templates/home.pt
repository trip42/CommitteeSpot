<tal:block tal:define="hide_content python:True; responsive_layout python:True;">
<metal:main use-macro="load:master.pt">
<metal:title fill-slot="title">The simple way for teams to review job applicants, nominations, proposals, etc. online</metal:title>
<metal:slot fill-slot="raw">

<div id="mast">
    <div class="container">
        <div class="row">
            <div class="span6">

                <div>
                <h1><span>Simplify your team-based<br />review processes</span></h1>
                <h2>Share information, get feedback, make decisions.</h2>

                <a href="${route_url('project:add', request)}" class="btn btn-huge btn-primary">
                    Get Started Now!
                    <div class="tiny">one project free, no signup to start</div>
                </a>
                </div>

            </div>
            <div class="span6" id="mast-screenshot-container"> 
                <a href="#video-modal" data-toggle="modal"><img src="/static/images/screenshot_watch.png" id="mast-screenshot" height="253" width="421" alt="Watch our demo"></a>
            </div>
        </div>
    </div>
</div>

<div id="home-bottom">

<div class="container page" id="simple-steps">
    <div class="row">
        <div class="span12">
            <h2>Four simple steps</h2>
        </div>
    </div>
    <div class="row">
        <div class="span3">
            <div class="padding">
                <div class="cs-icon items"></div>
                <h3>Add Items</h3>

                <p>
                    Post information and files for each item your team needs to review.
                    Create proposals, employment applications, award nominations, 
                    or anything you need to collect feedback on.
                </p>

            </div>
        </div>
        <div class="span3">
            <div class="padding">
                <div class="cs-icon feedback"></div>
                <h3>Create a feedback form</h3>

                <p>
                    Setup questions for your team to answer about each item. "Should we 
                    consider this candidate?", "Pursue this project?" 
                    You control the feedback.
                </p>

            </div>
        </div>
        <div class="span3">
            <div class="padding">
                <div class="cs-icon team"></div>
                <h3>Share with your team</h3>

                <p>
                    Enter an e-mail address for each team member.
                    Notification and reminder e-mails 
                    with review instructions are automatically sent to the team.
                </p>
            </div>
        </div>
        <div class="span3">
            <div class="padding">
                <div class="cs-icon results"></div>
                <h3>Get results, make decisions</h3>

                <p>
                    View your team's feedback and 
                    make decisions.
                    Generate online reports 
                    or export feedback to 
                    Microsoft Excel for powerful analysis.
                </p>
            </div>
        </div>
    </div>
</div>

<div class="container page">
    <div class="row">
        <div class="span12">

            <h2>Make decisions, not busy work</h2>

            <div class="row">
                <div class="span6">
                    <div class="padding" style="padding: 50px 55px;">

                        <p>
                            Stop wasting time manually sending, collecting, and organizing information.
                        </p>
                
                        <p>
                            CommitteeSpot automates the busy work of review and selection processes 
                            so that you can concentrate on making decisions and getting work done.
                        </p>

                    </div>
                </div>
                <div class="span6 home-right-image">
                    <img src="/static/images/diagram.png" alt="busy work diagram" style="padding-top: 10px;">
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container page">
    <div class="row">
        <div class="span12">

            <h2>Review anything</h2>

            <div class="row">
                <div class="span6 home-left-image">
                    <img src="/static/images/word_cloud.png" alt="types of reviews" style="padding-top: 10px;">
                </div>
                <div class="span6">
                    <div class="padding" style="padding: 50px 55px;;">
 
                <p>
                    Whether your team is hiring a contractor or choosing a venue for
                    an awards banquet CommitteeSpot can help. You choose the items
                    to share and the type of feedback your team needs to provide.
                </p>

                <p>
                    It truly works for any team-based review process.
                </p>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="container" id="box-row">
    <div class="row">
        <div class="span4">
            <div class="page">
                <h2>Free to use</h2>
                <div class="padding">
                    <p>
                        You get one free project, no credit card required. You don't need
                        an account to get started.
                    </p>

                    <a href="${route_url('project:add',request)}">Create your project</a>
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="page">
                <h2>Watch the demo</h2>
                <div class="padding" style="text-align: center;"> 
                    <a href="#video-modal" data-toggle="modal">
                        <img src="/static/images/video_small.jpg" alt="demo video"></a>
                </div>
            </div>
        </div>
        <div class="span4">
            <div class="page">
                <h2>We're here to help</h2>
                <div class="padding">
                    <p>
                        We want you to love CommitteeSpot.
                        If you ever need help, have a complaint,
                        or an idea for a new feature we want to know.
                    </p>

                    <p>
                        <a href="mailto:team@committeespot.com">Send us e-mail</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container page">
    <div class="row">
        <div class="span12">
            <h2>Simple pricing plans</h2>
        </div>
    </div>
    <div class="row">
        <div class="span8 offset2">
            <div class="padding">
                <table class="table" id="pricing">
                <thead>
                <tr>
                    <th>Tiny</th>
                    <th>Small</th>
                    <th>Medium</th>
                </tr>
                </thead>

                <tbody>
                <tr>
                    <td>1 <small>administrator</small></td>
                    <td>1 <small>administrator</small></td>
                    <td>5 <small>administrators</small></td>
                </tr>

                <tr>
                    <td>1 <small>project at a time</small></td>
                    <td>5 <small>projects at a time</small></td>
                    <td>20 <small>projects at a time</small></td>
                </tr>

                <tr>
                    <td>Basic<small>features</small></td>
                    <td>Basic + Premium<small>features</small></td>
                    <td>Basic + Premium<small>features</small></td>
                </tr>

                <tr>
                    <td><a href="${route_url('project:add',request)}" class="btn btn-success" style="width: 90%;"><strong>FREE!</strong> <small>get started now</small></a></td>
                    <td><a class="btn disabled" style="width: 90%">Coming Soon! <small>per month</small></a></td>
                    <td><a class="btn disabled" style="width: 90%">Coming Soon! <small>per month</small></a></td>
                </tr>
                </tbody>
                </table>

            </div>
        </div> 
    </div>
</div>
</div>

<div id="video-modal" class="modal" style="display: none;">
    <div class="modal-header">
        CommitteeSpot Demo
        <a class="close" data-dismiss="modal"><i class="icon-remove icon-white"></i></a>
    </div>
    <div id="video">
        <iframe id="demo-iframe" width="559" height="410" src="" frameborder="0" allowfullscreen></iframe>
    </div>
</div>

<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-29691323-1']);
  _gaq.push(['_setDomainName', 'committeespot.com']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

  $(function() {
    $('#video-modal').on('shown', function() {
        document.getElementById('demo-iframe').src = 'https://www.youtube.com/embed/mJWcGw5PBiw?rel=0&hd=1&autoplay=1&modestbranding=1&controls=1';
    });

    $('#video-modal').on('hide', function() {
        document.getElementById('demo-iframe').src = '';
    });
  });

</script>

</metal:slot>
</metal:main>
</tal:block>
